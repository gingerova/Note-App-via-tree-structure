@model Notes.UI.Models.NoteModel

@{
    ViewBag.Title = "Create";
}
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<style>
    body {
        background-color: #2a2a72;
        background-image: linear-gradient(315deg,#2a2a72 0%, #36c7bb 74%);
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        font-family: 'Franklin Gothic Book';
    }

    #nodeNote {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        font-size: 2rem;
        border: 1px solid #2a2a72;
        margin-bottom: 2rem;
    }

    #rootNote {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        border: 1px solid #2a2a71;
        margin-bottom: 2rem;
        font-size: 3rem;
    }

    #nodeNoteText {
        font-size: 2rem;
    }

    ul {
        display: flex;
        justify-content: space-evenly;
        padding: 0;
        max-width: 400px;
        list-style-type: none;
    }

        ul li {
            display: flex;
            align-items: center;
            font-size: 1.5rem;
        }

    .form-control {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        font-size: 2rem;
        border: none;
        margin-bottom: 2rem;
    }

    .form-control::placeholder {
    color: #41ecde;
        }

    label{
        color:#ffffff;
    }
    .btn.btn-default {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        font-size: 2rem;
        border: 1px solid #2a2a71;
        margin-bottom: 2rem;
    }

</style>

<h2 style="color: #fff;">Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-10">
            <label for="note" class="control-label col-md-2">Your Note:</label>
            @Html.EditorFor(model => model.Note1, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.Note1, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <i class='fas fa-arrow-left' style="color: #fff;"></i>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
