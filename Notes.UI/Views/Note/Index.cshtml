@model IEnumerable<Notes.UI.Models.NoteModel>

@{
    ViewBag.Title = "YOUR NOTEBOOK";
}
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<style>
    body {
        background-color: #2a2a72;
        background-image: linear-gradient(315deg,#2a2a72 0%, #36c7bb 74%);
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        font-family: 'Franklin Gothic Book';
    }

    #nodeNote {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        font-size: 2rem;
        border: 1px solid #2a2a72;
        margin-bottom: 2rem;
    }

    #rootNote {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        border: 1px solid #2a2a71;
        margin-bottom: 2rem;
        font-size: 3rem;
    }

    #nodeNoteText {
        font-size: 2rem;
    }

    ul {
        display: flex;
        justify-content: space-evenly;
        padding: 0;
        max-width: 400px;
        list-style-type: none;
    }

        ul li {
            display: flex;
            align-items: center;
            font-size: 1.5rem;
        }
</style>

<h2 style="color: #2a2a72; ">WELCOME TO YOUR NOTEBOOK</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@foreach (var item in Model)
{
    <div id="rootNote">
        <ul class="info">
            @Html.DisplayFor(modelItem => item.Note1)
            <li>@Html.ActionLink("Edit", "Edit", new { item.Id })</li>
            <li>@Html.ActionLink("Add", "NodeNote", new { item.Id })</li>
            <li>@Html.ActionLink("Delete", "Delete", new { item.Id })</li>
        </ul>
    </div>
    <div id="nodeNotes">
        @Html.Action("NodeNotes", "Note", new { item.Id })
    </div>


}

