@model Notes.UI.Models.NoteModel

@{
    ViewBag.Title = "Delete";
}
<style>
    body {
        background-color: #2a2a72;
        background-image: linear-gradient(315deg,#2a2a72 0%, #36c7bb 74%);
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        font-family: 'Franklin Gothic Book';
    }

    #nodeNote {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        font-size: 2rem;
        border: 1px solid #2a2a72;
        margin-bottom: 2rem;
    }

    #rootNote {
        background-color: #36c7bb6e;
        border-radius: 10px;
        padding: 1rem;
        color: #fff;
        font-family: inherit;
        border: 1px solid #2a2a71;
        margin-bottom: 2rem;
        font-size: 3rem;
    }

    #nodeNoteText {
        font-size: 2rem;
    }

    ul {
        display: flex;
        justify-content: space-evenly;
        padding: 0;
        max-width: 400px;
        list-style-type: none;
    }

        ul li {
            display: flex;
            align-items: center;
            font-size: 1.5rem;
        }
</style>

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>NoteModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Note1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note1)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
